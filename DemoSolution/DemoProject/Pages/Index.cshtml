@page
@model DemoProject.Pages.IndexModel
@{
}

<style>
    td img {
        max-width: 200px;
    }
</style>

Hallo en welkom bij mijn pagina.

bla: @(Model.Bla == "hoi" ? "nope" : Model.Bla.ToUpper())

@if (Model.Cars == null || !Model.Cars.Any())
{
    <p>Geen auto's vandaag.</p>
    return;
}

<table>
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year of build</th>
            <th>Photo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td><img src="@car.PhotoUrl"></td>
            </tr>
        }
    </tbody>
</table>

